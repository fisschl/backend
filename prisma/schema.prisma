generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  SUPER_ADMIN
}

model User {
  userId    String   @id @default(uuid(7)) @db.Uuid
  userName  String
  password  String
  email     String   @unique
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tokens    Token[]

  @@index([email])
  @@index([userName])
}

model Token {
  token     String   @id
  userId    String   @db.Uuid
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}
